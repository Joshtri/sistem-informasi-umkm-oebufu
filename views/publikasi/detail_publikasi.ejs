<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <%- include('partials/header'); %>
    <div class="container mt-5">
        <nav aria-label="breadcrumb" class="small">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/main/dashboard"><i class="fa-solid fa-house me-1"></i>Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
            </ol>
        </nav>
        <hr>
        <a href="/adm/data/publikasi" class="btn btn-secondary btn-sm">Kembali</a>

        <h2 class="mb-4 mt-2">Detail Publikasi</h2>
        <form id="publikasiForm" class="row g-3 mb-3">
            <div class="col-md-6">
                <label for="judul_publikasi" class="form-label">Judul Publikasi</label>
                <input type="text" class="form-control" id="judul_publikasi" name="judul_publikasi" value="<%= publikasiDetail.judul_publikasi %>" readonly>
            </div>
            <div class="col-md-6">
                <label for="tanggal_publikasi" class="form-label">Tanggal Publikasi</label>
                <input type="text" class="form-control" id="tanggal_publikasi" name="tanggal_publikasi"  value="<%= new Date(publikasiDetail.tanggal_publikasi).toLocaleString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' }) %>" readonly>
            </div>
            <div class="col-12">
                <label for="deskripsi_publikasi" class="form-label">Deskripsi Publikasi</label>
                <textarea class="form-control" id="deskripsi_publikasi" name="deskripsi_publikasi" rows="3"readonly><%= publikasiDetail.deskripsi_publikasi %></textarea>
            </div>
            <div class="col-4">
                <label for="berkas_publikasi_pdf" class="form-label">Berkas Publikasi (PDF)</label>
                <input class="form-control" type="text" value="/<%= publikasiDetail.berkas_publikasi_pdf %>" readonly>
                <a href="/<%= publikasiDetail.berkas_publikasi_pdf %>" target="_blank"><i class="fa-solid fa-eye fa-beat-fade mx-1"></i>Lihat Berkas</a>

            </div>
            <div class="col-4">
                <label for="berkas_publikasi_excel" class="form-label">Berkas Publikasi (Excel)</label>
                <input class="form-control" type="text" value="/<%= publikasiDetail.berkas_publikasi_excel %>" readonly>
                <a href="/<%= publikasiDetail.berkas_publikasi_excel %>" target="_blank"><i class="fa-solid fa-eye fa-beat-fade mx-1"></i>Lihat Berkas</a>

            </div>
            <div class="col-4">
                <label for="berkas_publikasi_docx" class="form-label">Berkas Publikasi (Docx)</label>
                <input class="form-control" type="text" value="/<%= publikasiDetail.berkas_publikasi_doc %>" readonly>
                <a href="/<%= publikasiDetail.berkas_publikasi_doc %>" target="_blank"><i class="fa-solid fa-eye fa-beat-fade mx-1"></i>Lihat Berkas</a>

            </div>


        </form>
        
        
        
    </div>

    <!-- Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Notifikasi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Publikasi berhasil ditambahkan!
                </div>
                <div class="modal-footer">
                    <a href="/adm/data/publikasi" class="btn btn-secondary">Close</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> -->
</body>
</html>
